@model WebApplication.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="jumbotron" style="margin-top: 3%; text-align: center;">
    <h3>User Login Page</h3>

    <form asp-action="Login" method="post" autocomplete="off" style="margin-top: 5%;">
        <div class="form-group" style="margin-bottom: 3%">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" placeholder="Enter Your Name"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom: 3%">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="Enter Your Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
    <a class="btn btn-primary" asp-action="Register">Not a member? Register Yourself!</a>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

